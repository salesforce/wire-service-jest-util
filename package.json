    "@lwc/engine": "^1.5.0",
    "@lwc/wire-service": "^1.5.0",
    "@salesforce/eslint-config-lwc": "^0.5.0",
    "babel-jest": "^25.3.0",
    "eslint": "^6.8.0",
    "isbinaryfile": "^4.0.5",
    "jest": "^25.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.1.0"
  },
  "lwc": {
    "modules": [
      {
        "name": "wire-service-jest-util",
        "path": "dist/wire-service-jest-util.es.js"
      }
    ]
